@model IEnumerable<ASP8.Models.Product>

<h2>Products (as a list)</h2>
<ul>
    @foreach (var item in Model)
    {
        <li>@item.ID. @item.Name - @item.Price$ (@item.CreatedDate.ToShortDateString())</li>
    }
</ul>

<h2>Products (as a Table)</h2>
<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Date</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.CreatedDate.ToShortDateString()</td>
        </tr>
    }
</table>